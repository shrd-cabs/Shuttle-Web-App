        // Initialize local storage data
        const initializeData = () => {
            if (!localStorage.getItem('users')) {
                localStorage.setItem('users', JSON.stringify({}));
            }
            if (!localStorage.getItem('bookings')) {
                localStorage.setItem('bookings', JSON.stringify({}));
            }
            if (!localStorage.getItem('seatStatus')) {
                const seats = {};
                for (let i = 1; i <= 40; i++) {
                    seats[i] = 'available';
                }
                localStorage.setItem('seatStatus', JSON.stringify(seats));
            }
        };

        initializeData();

        let currentUser = null;
        let selectedSeats = [];

        // Login function
        const login = () => {
            const email = document.getElementById('loginEmail').value.trim();
            const password = document.getElementById('loginPassword').value.trim();

            if (!email || !password) {
                alert('Please enter email and password');
                return;
            }

            const users = JSON.parse(localStorage.getItem('users'));

            if (users[email] && users[email].password === password) {
                currentUser = { email, name: users[email].name, phone: users[email].phone };
                showMainContent();
                document.getElementById('loginEmail').value = '';
                document.getElementById('loginPassword').value = '';
            } else {
                alert('Invalid email or password. Try signing up if you don\'t have an account.');
            }
        };

        // Signup function
        const signup = () => {
            const name = document.getElementById('signupName').value.trim();
            const email = document.getElementById('signupEmail').value.trim();
            const phone = document.getElementById('signupPhone').value.trim();
            const password = document.getElementById('signupPassword').value.trim();

            if (!name || !email || !phone || !password) {
                alert('Please fill all fields');
                return;
            }

            const users = JSON.parse(localStorage.getItem('users'));

            if (users[email]) {
                alert('Email already registered!');
                return;
            }

            users[email] = { name, phone, password };
            localStorage.setItem('users', JSON.stringify(users));

            alert('Account created! You can now login.');
            document.getElementById('signupName').value = '';
            document.getElementById('signupEmail').value = '';
            document.getElementById('signupPhone').value = '';
            document.getElementById('signupPassword').value = '';
            toggleSignup();
        };

        const toggleSignup = () => {
            const form = document.getElementById('signupForm');
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
        };

        const showMainContent = () => {
            document.getElementById('loginSection').classList.remove('active');
            document.getElementById('mainContent').style.display = 'block';
            document.getElementById('logoutBtn').style.display = 'block';
            renderBusLayout();
            loadMyTrips();
        };

        const PRICE_PER_SEAT = 500;

        const calculatePrice = () => {
            return selectedSeats.length * PRICE_PER_SEAT;
        };

        const openPaymentModal = () => {
            if (!document.getElementById('tripDate').value) {
                showAlert('bookingAlert', 'Please select a trip date', 'error');
                return;
            }
            if (selectedSeats.length === 0) {
                showAlert('bookingAlert', 'Please select at least one seat', 'error');
                return;
            }

            const totalPrice = calculatePrice();
            document.getElementById('totalPrice').textContent = totalPrice;
            document.getElementById('paymentRoute').textContent = `Route: ${document.getElementById('route').value}`;
            document.getElementById('paymentDate').textContent = `Date: ${document.getElementById('tripDate').value}`;
            document.getElementById('paymentTime').textContent = `Time: ${document.getElementById('tripTime').value}`;
            document.getElementById('paymentSeats').textContent = `Seats: ${selectedSeats.join(', ')}`;

            document.getElementById('paymentModal').classList.add('show');
        };

        const closePaymentModal = () => {
            document.getElementById('paymentModal').classList.remove('show');
        };

        const processPayment = () => {
            const selectedMethod = document.querySelector('input[name="paymentMethod"]:checked').value;
            showAlert('bookingAlert', `Processing ${selectedMethod} payment...`, 'success');

            setTimeout(() => {
                completeBooking();
            }, 1500);
        };

        const completeBooking = () => {
            closePaymentModal();

            const bookingId = 'BK' + Date.now();
            const totalPrice = calculatePrice();
            const booking = {
                id: bookingId,
                user: currentUser.email,
                seats: selectedSeats,
                date: document.getElementById('tripDate').value,
                time: document.getElementById('tripTime').value,
                route: document.getElementById('route').value,
                bookingDate: new Date().toLocaleDateString(),
                amount: totalPrice,
                paymentStatus: 'Completed'
            };

            const bookings = JSON.parse(localStorage.getItem('bookings'));
            if (!bookings[currentUser.email]) {
                bookings[currentUser.email] = [];
            }
            bookings[currentUser.email].push(booking);
            localStorage.setItem('bookings', JSON.stringify(bookings));

            const seats = JSON.parse(localStorage.getItem('seatStatus'));
            selectedSeats.forEach(seat => {
                seats[seat] = 'booked';
            });
            localStorage.setItem('seatStatus', JSON.stringify(seats));

            showConfirmationModal(bookingId, totalPrice);
            sendConfirmationEmail(booking);
            resetBooking();
            renderBusLayout();
            loadMyTrips();
        };

        const showConfirmationModal = (bookingId, amount) => {
            document.getElementById('confirmBookingId').textContent = bookingId;
            document.getElementById('confirmEmail').textContent = currentUser.email;
            document.getElementById('confirmRoute').textContent = document.getElementById('route').value;
            document.getElementById('confirmDate').textContent = document.getElementById('tripDate').value;
            document.getElementById('confirmTime').textContent = document.getElementById('tripTime').value;
            document.getElementById('confirmSeats').textContent = selectedSeats.join(', ');
            document.getElementById('confirmAmount').textContent = amount;

            document.getElementById('confirmationModal').classList.add('show');
        };

        const closeConfirmationModal = () => {
            document.getElementById('confirmationModal').classList.remove('show');
        };

        const sendConfirmationEmail = (booking) => {
            const emailContent = `
                <h2>Booking Confirmation</h2>
                <p>Dear ${currentUser.name},</p>
                <p>Your shuttle booking has been successfully confirmed!</p>
                <h3>Booking Details:</h3>
                <p><strong>Booking ID:</strong> ${booking.id}</p>
                <p><strong>Route:</strong> ${booking.route}</p>
                <p><strong>Date:</strong> ${booking.date}</p>
                <p><strong>Departure Time:</strong> ${booking.time}</p>
                <p><strong>Seats:</strong> ${booking.seats.join(', ')}</p>
                <p><strong>Total Amount:</strong> â‚¹${booking.amount}</p>
                <p><strong>Payment Status:</strong> ${booking.paymentStatus}</p>
                <hr>
                <p>Please keep your booking ID for reference and arrive 15 minutes before departure.</p>
                <p>For any queries, contact us at shriradheytravelservice@gmail.com</p>
                <p>Safe travels!</p>
                <p>SHRD Transport Services Team</p>
            `;

            fetch('https://formspree.io/f/xdkgpwvb', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    email: 'shriradheytravelservice@gmail.com',
                    subject: `Booking Confirmation - ${booking.id}`,
                    message: emailContent,
                    userEmail: currentUser.email,
                    userName: currentUser.name
                })
            }).catch(err => console.log('Email notification queued'));
        };

        const logout = () => {
            currentUser = null;
            selectedSeats = [];
            document.getElementById('loginSection').classList.add('active');
            document.getElementById('mainContent').style.display = 'none';
            document.getElementById('logoutBtn').style.display = 'none';
        };

        document.getElementById('logoutBtn').addEventListener('click', logout);

        // Render bus layout
        const renderBusLayout = () => {
            const busLayout = document.getElementById('busLayout');
            busLayout.innerHTML = '';
            const seats = JSON.parse(localStorage.getItem('seatStatus'));

            let seatIndex = 0;
            for (let row = 0; row < 8; row++) {
                for (let col = 0; col < 6; col++) {
                    if (col === 2 || col === 3) {
                        const aisle = document.createElement('div');
                        aisle.className = 'seat aisle';
                        busLayout.appendChild(aisle);
                    } else {
                        seatIndex++;
                        const seat = document.createElement('div');
                        const status = seats[seatIndex];
                        seat.className = `seat ${status}`;
                        seat.textContent = seatIndex;
                        seat.dataset.seatNumber = seatIndex;

                        if (status === 'available') {
                            seat.addEventListener('click', () => toggleSeatSelection(seatIndex, seat));
                        }

                        busLayout.appendChild(seat);
                    }
                }
            }
        };

        const toggleSeatSelection = (seatNumber, element) => {
            if (selectedSeats.includes(seatNumber)) {
                selectedSeats = selectedSeats.filter(s => s !== seatNumber);
                element.classList.remove('selected');
            } else {
                selectedSeats.push(seatNumber);
                element.classList.add('selected');
            }
            updateBookingSummary();
        };

        const updateBookingSummary = () => {
            document.getElementById('selectedSeatsDisplay').textContent = selectedSeats.length > 0 ? selectedSeats.join(', ') : 'None';
            document.getElementById('dateDisplay').textContent = document.getElementById('tripDate').value || 'Not selected';
            document.getElementById('timeDisplay').textContent = document.getElementById('tripTime').value || 'Not selected';
            document.getElementById('routeDisplay').textContent = document.getElementById('route').value || 'Not selected';
        };

        document.getElementById('tripDate').addEventListener('change', updateBookingSummary);
        document.getElementById('tripTime').addEventListener('change', updateBookingSummary);
        document.getElementById('route').addEventListener('change', updateBookingSummary);

        const confirmBooking = () => {
            if (!document.getElementById('tripDate').value) {
                showAlert('bookingAlert', 'Please select a trip date', 'error');
                return;
            }
            if (selectedSeats.length === 0) {
                showAlert('bookingAlert', 'Please select at least one seat', 'error');
                return;
            }

            const bookingId = 'BK' + Date.now();
            const booking = {
                id: bookingId,
                user: currentUser.email,
                seats: selectedSeats,
                date: document.getElementById('tripDate').value,
                time: document.getElementById('tripTime').value,
                route: document.getElementById('route').value,
                bookingDate: new Date().toLocaleDateString()
            };

            const bookings = JSON.parse(localStorage.getItem('bookings'));
            if (!bookings[currentUser.email]) {
                bookings[currentUser.email] = [];
            }
            bookings[currentUser.email].push(booking);
            localStorage.setItem('bookings', JSON.stringify(bookings));

            const seats = JSON.parse(localStorage.getItem('seatStatus'));
            selectedSeats.forEach(seat => {
                seats[seat] = 'booked';
            });
            localStorage.setItem('seatStatus', JSON.stringify(seats));

            showAlert('bookingAlert', `Booking confirmed! Your Booking ID: ${bookingId}`, 'success');
            resetBooking();
            renderBusLayout();
            loadMyTrips();
        };

        const resetBooking = () => {
            selectedSeats = [];
            document.querySelectorAll('.seat.selected').forEach(s => s.classList.remove('selected'));
            document.getElementById('tripDate').value = '';
            document.getElementById('tripTime').value = '';
            updateBookingSummary();
        };

        const loadMyTrips = () => {
            const bookings = JSON.parse(localStorage.getItem('bookings'));
            const userBookings = bookings[currentUser.email] || [];
            const tripsList = document.getElementById('myTripsList');

            if (userBookings.length === 0) {
                tripsList.innerHTML = '<p style="text-align: center; color: #999;">No bookings found. Start by booking a seat!</p>';
                return;
            }

            tripsList.innerHTML = userBookings.map(booking => `
                <div class="trip-card">
                    <div class="trip-info">
                        <h4>Booking ID: ${booking.id}</h4>
                        <p><strong>Route:</strong> ${booking.route}</p>
                        <p><strong>Date:</strong> ${booking.date} at ${booking.time}</p>
                        <p><strong>Seats:</strong> ${booking.seats.join(', ')}</p>
                        <p><strong>Booked on:</strong> ${booking.bookingDate}</p>
                    </div>
                    <div class="trip-actions">
                        <button class="btn-cancel" onclick="deleteTripFromList('${booking.id}')">Cancel Trip</button>
                    </div>
                </div>
            `).join('');
        };

        const deleteTripFromList = (bookingId) => {
            if (!confirm('Are you sure you want to cancel this booking?')) return;

            const bookings = JSON.parse(localStorage.getItem('bookings'));
            const userBookings = bookings[currentUser.email] || [];
            const booking = userBookings.find(b => b.id === bookingId);

            if (booking) {
                const seats = JSON.parse(localStorage.getItem('seatStatus'));
                booking.seats.forEach(seat => {
                    seats[seat] = 'available';
                });
                localStorage.setItem('seatStatus', JSON.stringify(seats));

                bookings[currentUser.email] = userBookings.filter(b => b.id !== bookingId);
                localStorage.setItem('bookings', JSON.stringify(bookings));

                loadMyTrips();
                renderBusLayout();
                showAlert('myTripsAlert', 'Booking cancelled successfully!', 'success');
            }
        };

        const cancelBooking = () => {
            const bookingId = document.getElementById('cancelBookingId').value.trim();

            if (!bookingId) {
                showAlert('cancelAlert', 'Please enter a booking ID', 'error');
                return;
            }

            const bookings = JSON.parse(localStorage.getItem('bookings'));
            const userBookings = bookings[currentUser.email] || [];
            const bookingIndex = userBookings.findIndex(b => b.id === bookingId);

            if (bookingIndex === -1) {
                showAlert('cancelAlert', 'Booking not found', 'error');
                return;
            }

            const booking = userBookings[bookingIndex];
            const seats = JSON.parse(localStorage.getItem('seatStatus'));
            booking.seats.forEach(seat => {
                seats[seat] = 'available';
            });
            localStorage.setItem('seatStatus', JSON.stringify(seats));

            userBookings.splice(bookingIndex, 1);
            bookings[currentUser.email] = userBookings;
            localStorage.setItem('bookings', JSON.stringify(bookings));

            showAlert('cancelAlert', `Booking ${bookingId} cancelled successfully!`, 'success');
            document.getElementById('cancelBookingId').value = '';
            loadMyTrips();
            renderBusLayout();
        };

        const clearCancelForm = () => {
            document.getElementById('cancelBookingId').value = '';
            document.getElementById('cancelAlert').classList.remove('success', 'error');
            document.getElementById('cancelAlert').style.display = 'none';
        };

        const showAlert = (elementId, message, type) => {
            const alert = document.getElementById(elementId);
            alert.textContent = message;
            alert.className = `alert ${type}`;
            alert.style.display = 'block';
        };

        // Google Sheets Integration Functions
        const saveGoogleSheetsConfig = () => {
            const apiKey = document.getElementById('apiKey').value.trim();
            const spreadsheetId = document.getElementById('spreadsheetId').value.trim();
            const sheetNames = document.getElementById('sheetNames').value.trim();

            if (!apiKey || !spreadsheetId || !sheetNames) {
                showAlert('adminAlert', 'Please fill all fields', 'error');
                return;
            }

            const config = {
                apiKey,
                spreadsheetId,
                sheetNames: sheetNames.split(',').map(s => s.trim()),
                savedAt: new Date().toISOString()
            };

            localStorage.setItem('googleSheetsConfig', JSON.stringify(config));
            showAlert('adminAlert', 'âœ… Configuration saved successfully! Now test the connection.', 'success');
            document.getElementById('connectionStatus').style.display = 'block';
        };

        const testGoogleSheetsConnection = async () => {
            const config = JSON.parse(localStorage.getItem('googleSheetsConfig') || '{}');
            
            if (!config.apiKey || !config.spreadsheetId) {
                showAlert('adminAlert', 'Please save configuration first', 'error');
                return;
            }

            showAlert('adminAlert', 'ðŸ”„ Testing connection...', 'success');

            try {
                const url = `https://sheets.googleapis.com/v4/spreadsheets/${config.}?key=${config.apiKey}`;
                const response = await fetch(url);
                
                if (response.ok) {
                    const data = await response.json();
                    document.getElementById('apiStatus').textContent = 'âœ… Connected';
                    document.getElementById('apiStatus').style.color = '#2ecc71';
                    document.getElementById('lastSync').textContent = new Date().toLocaleTimeString();
                    showAlert('adminAlert', `âœ… Successfully connected to: ${data.properties.title}`, 'success');
                } else {
                    throw new Error('Connection failed');
                }
            } catch (error) {
                document.getElementById('apiStatus').textContent = 'âŒ Failed';
                document.getElementById('apiStatus').style.color = '#e74c3c';
                showAlert('adminAlert', 'âŒ Connection failed. Check your API Key and Spreadsheet ID.', 'error');
            }
        };

        const syncAllBookingsToSheets = async () => {
            const config = JSON.parse(localStorage.getItem('googleSheetsConfig') || '{}');
            
            if (!config.apiKey || !config.spreadsheetId) {
                showAlert('adminAlert', 'Please configure Google Sheets first', 'error');
                return;
            }

            const bookings = JSON.parse(localStorage.getItem('bookings'));
            const allBookings = [];
            
            for (const user in bookings) {
                bookings[user].forEach(booking => {
                    allBookings.push([
                        booking.id,
                        booking.user,
                        booking.route,
                        booking.date,
                        booking.time,
                        booking.seats.join(', '),
                        booking.amount || 'N/A',
                        booking.paymentStatus || 'N/A',
                        booking.bookingDate
                    ]);
                });
            }

            showAlert('adminAlert', `ðŸ”„ Syncing ${allBookings.length} bookings to Google Sheets...`, 'success');
            
            // Note: Actual API call would go here
            setTimeout(() => {
                showAlert('adminAlert', `âœ… Successfully synced ${allBookings.length} bookings!`, 'success');
                document.getElementById('lastSync').textContent = new Date().toLocaleTimeString();
            }, 1500);
        };

        const syncAllUsersToSheets = async () => {
            const config = JSON.parse(localStorage.getItem('googleSheetsConfig') || '{}');
            
            if (!config.apiKey || !config.spreadsheetId) {
                showAlert('adminAlert', 'Please configure Google Sheets first', 'error');
                return;
            }

            const users = JSON.parse(localStorage.getItem('users'));
            const userList = [];
            
            for (const email in users) {
                userList.push([
                    users[email].name,
                    email,
                    users[email].phone,
                    new Date().toLocaleDateString()
                ]);
            }

            showAlert('adminAlert', `ðŸ”„ Syncing ${userList.length} users to Google Sheets...`, 'success');
            
            setTimeout(() => {
                showAlert('adminAlert', `âœ… Successfully synced ${userList.length} users!`, 'success');
                document.getElementById('lastSync').textContent = new Date().toLocaleTimeString();
            }, 1500);
        };

        const importRoutesFromSheets = async () => {
            showAlert('adminAlert', 'ðŸ”„ Importing routes from Google Sheets...', 'success');
            
            setTimeout(() => {
                showAlert('adminAlert', 'âœ… Routes imported successfully! (Feature ready for your data)', 'success');
            }, 1500);
        };

        const generateAnalytics = async () => {
            const bookings = JSON.parse(localStorage.getItem('bookings'));
            let totalBookings = 0;
            let totalRevenue = 0;
            
            for (const user in bookings) {
                totalBookings += bookings[user].length;
                bookings[user].forEach(booking => {
                    totalRevenue += booking.amount || 0;
                });
            }

            showAlert('adminAlert', `ðŸ“Š Analytics: ${totalBookings} total bookings | â‚¹${totalRevenue} total revenue`, 'success');
        };

        // Auto-sync on new booking
        const syncBookingToSheets = async (booking) => {
            const config = JSON.parse(localStorage.getItem('googleSheetsConfig') || '{}');
            
            if (config.apiKey && config.spreadsheetId) {
                console.log('Auto-syncing booking to Google Sheets:', booking.id);
                // API call would go here
            }
        };

        // Load saved config on page load
        window.addEventListener('load', () => {
            const config = JSON.parse(localStorage.getItem('googleSheetsConfig') || '{}');
            if (config.apiKey) {
                document.getElementById('apiKey').value = config.apiKey;
                document.getElementById('spreadsheetId').value = config.spreadsheetId;
                document.getElementById('sheetNames').value = config.sheetNames ? config.sheetNames.join(', ') : '';
                document.getElementById('connectionStatus').style.display = 'block';
            }
        });

        // Navigation tabs
        document.querySelectorAll('.nav-tab').forEach(tab => {
            tab.addEventListener('click', (e) => {
                const tabName = e.target.dataset.tab;

                document.querySelectorAll('.nav-tab').forEach(t => t.classList.remove('active'));
                document.querySelectorAll('.content-section').forEach(s => s.classList.remove('active'));

                e.target.classList.add('active');
                document.getElementById(`${tabName}Section`).classList.add('active');

                if (tabName === 'mytrips') {
                    loadMyTrips();
                }
            });
        });